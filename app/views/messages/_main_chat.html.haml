.main-chat
  .main-chat__group-info
    
    .main-chat__group-info__left-side
      .main-chat__group-info__left-side--group-name
        = @group.name
      .main-chat__group-info__left-side--member-name
        member:
        - @group.users.each do |user|
          = user.name
    .main-chat__group-info__right-side
      .main-chat__group-info__right-side--edit
        = link_to 'Edit', edit_group_path(@group)

  .main-chat__message-list
    = render @messages
    .main-chat__message-list__contents
      .main-chat__message-list__contents--user-name
      .main-chat__message-list__contents--datetime
    .main-chat__message-list__text

  .main-chat__message-form
    .form
      = form_with model: [@group, @message], html: {class: "Form"}, local: true do |f|
        .input-box
          = f.text_field :content, class: 'input-box__text', placeholder: 'type a message'
          = f.label :image, class: 'input-box__image' do
            = icon('far', 'image', class: 'input-box__icon')
            = f.file_field :image, class: 'input-box__icon__file'
        = f.submit 'Send', class: 'send'

