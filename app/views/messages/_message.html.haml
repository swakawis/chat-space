.MessageBox{data: {message: {id: message.id}}}
  .main-chat__message-list__contents
    .main-chat__message-list__contents--user-name
      = message.user.name
    .main-chat__message-list__contents--datetime
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main-chat__message-list__text
    - if message.content.present?
      %p.Message__content
        = message.content
    = image_tag message.image.url, class: 'Message__image' if message.image.present?